handlebar id="addon-summary-template" type="text/x-handlebars-template"
  | {{#if list}}
  .row
    ul.addons-list
      | {{#list}}
      li.addons-list--item
        span.addon-item--name
          | {{name}}
        .addon-item--pricing
          span.addon-item--price
            span data-recurly="currency_symbol" {{currency_symbol}}
            span data-recurly="addon_price" data-recurly-addon='{{code}}'
              | {{price}}
        span data-recurly-addon='{{quantity}}' {{quantity}}

      | {{/list}}
  | {{/if}}
